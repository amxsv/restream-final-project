.row
  .col-lg-12
    .page-header
      %h1{id: 'forms'} Авторизация

.row
  .col-lg-6
    .well.bs-component
      = form_for :user,
                 :url => { controller: 'default', action: 'index' },
                 :html => { class: 'form-horizontal' }  do |f|
        %fieldset
          %legend Пожалуйста, авторизуйтесь
          .form-group
            %label{ for: 'email', class: 'col-lg-2 control-label' } Email
            .col-lg-10
              =f.text_field :email, { id: 'email', class: 'form-control', placeholder: 'email' }

          .form-group
            %label{ for: 'password', class: 'col-lg-2 control-label' } Password
            .col-lg-10
              =f.text_field :password, { id: 'password', class: 'form-control', placeholder: 'password' }

          .form-group
            .col-lg-10.col-lg-offset-2
              =f.submit 'Войти', { class: 'btn btn-primary' }


