%h1= t '.page_title'

= link_to t('helpers.submit.create'), new_admin_task_path, { class: 'btn btn-default' }

%table{ class: 'table content' }
  %th= t '.id'
  %th= t '.title'
  %th= t '.description'
  %th= t '.due_date'
  %th= t '.author'
  %th= t '.assigned'
  %th= t '.status'
  %th= t '.actions'
  - @tasks.each do |task|
    %tr
      %td= task.id
      %td= task.title
      %td= task.description
      %td= task.due_date
      %td= task.author.full_name
      %td= task.assigned_user.full_name
      %td= task.state
      %td
        = link_to '', admin_task_path(task), { class: 'glyphicon glyphicon-share-alt' }
        = link_to '', edit_admin_task_path(task), { class: 'glyphicon glyphicon-edit' }
        = link_to '',
          admin_task_path(task),
          method: :delete,
          data: { confirm: t('.delete') }, class: 'glyphicon glyphicon-remove'
