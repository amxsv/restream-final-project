%h1= t '.page_title'

= render 'filter'

%table{ class: 'table content' }
  %th= sort_link(@q, :id)
  %th= User.human_attribute_name(:first_name)
  %th= User.human_attribute_name(:last_name)
  %th= User.human_attribute_name(:email)
  %th= User.human_attribute_name(:role)
  %th= User.human_attribute_name(:state)
  %th= t '.tasks_count'

  - @users.each do |user|
    %tr
      %td= user.id
      %td= user.first_name
      %td= user.last_name
      %td= user.email
      %td= user.role.text
      %td= user.human_state_name
      %td= @tasks_count[user.id]

= render 'pagination'
